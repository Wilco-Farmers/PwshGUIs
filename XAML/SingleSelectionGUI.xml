<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    Title="$Title" Height="300" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Name="MainForm" Background="#FFDDC9A4">
        <ComboBox Name="ListItems" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" Width="174" SelectedIndex="0"/>
        <Label Name="TopText" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="84" Width="280">
            <TextBlock Name="TextBlockContent" FontSize="14" TextAlignment="Center" TextWrapping="WrapWithOverflow" Text="Content"/>
        </Label>
        <Button Name="SubmitButton" IsDefault="True" Content="SubmitButton" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="100" Background="#FF033C5A" Foreground="White" FontWeight="Normal" FontSize="18" FontStyle="Normal" Margin="150,189,0,0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Name="CancelButton" Content="CancelButton" HorizontalAlignment="Left" Margin="45,189,0,0" VerticalAlignment="Top" Height="35" Width="100" Background="#FF033C5A" Foreground="White" FontWeight="Normal" FontSize="18" FontStyle="Normal">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>