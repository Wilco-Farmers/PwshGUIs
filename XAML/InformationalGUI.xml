<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    Title="$Title" Height="$Height" Width="$Width" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Name="MainForm" Background="#FFDDC9A4">
        <Button Name="OkButton" Content="$OKButtonText" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Height="25" Width="110" Background="#FF033C5A" Foreground="White" FontWeight="Normal" FontSize="14" FontStyle="Normal">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="92" Width="305">
            <TextBlock FontSize="14" TextAlignment="Center" TextWrapping="WrapWithOverflow" Text="$Content" RenderTransformOrigin="0.5,0.5" Height="60" Width="295"/>
        </Label>
    </Grid>
</Window>