<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    Title="$Title" Height="$Height" Width="$Width">
    <Grid Name="MainForm" Background="#FFDDC9A4">
        <Button Name="OkButton" Content="OK" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top" Height="25" Width="100" Background="#FF033C5A" Foreground="White" FontWeight="Normal" FontSize="18" FontStyle="Normal">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="$Content" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="92" Width="305"/>
    </Grid>
</Window>